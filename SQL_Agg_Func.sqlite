/*Report about the rising trends in the startup world having a table named 'startups' with columns: name, location, category, employees, raised, valuation, founded, stage, ceo, info*/

SELECT *          -- Take a look
FROM startups;

SELECT COUNT(*)   -- Count the startups
FROM startups;

SELECT SUM(valuation)  -- Val of all su
FROM startups;

SELECT MAX(raised)    -- max amount raised
FROM startups;

/*Find the maximum amount of money raised during 'Seed' stage*/
SELECT MAX(raised)
FROM startups
WHERE stage = 'Seed';

SELECT MIN(founded)  -- Oldest startup
FROM startups;

SELECT AVG(valuation)
FROM startups;

/*Show the average valuation of each category, but showed in descending order*/
SELECT category, ROUND(AVG(valuation), 2)
FROM startups
GROUP BY category  --or GROUP BY 1
ORDER BY AVG(valuation) DESC; --Order by 2

SELECT category, COUNT(*)
FROM startups
GROUP BY category
ORDER BY COUNT(*) DESC;


/*Show the categories that have more than 3 companies in them*/
SELECT category, COUNT(*)
FROM startups
GROUP BY category
HAVING COUNT(*) > 3
ORDER BY COUNT(*) DESC; 

SELECT location, ROUND(AVG(employees), 2)
FROM startups
GROUP BY location
ORDER BY 2 DESC;

SELECT location, ROUND(AVG(employees), 2)
FROM startups
GROUP BY location
HAVING AVG(employees) > 500
ORDER BY 2 DESC;







